<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_sale_order_inherit_sannic" model="ir.ui.view">
        <field name="name">sale.orderform.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form[1]/sheet[1]/notebook[1]/page[@name='order_lines']/field[@name='order_line']/tree[1]/field[@name='custom_vendor_id']" position="after">
                <field name="trm_currency_id"/>
                <field name="use_trm"/>
                <field name="trm_rate"/>
            </xpath>
            <xpath expr="//form[1]/sheet[1]/notebook[1]/page[@name='order_lines']/field[@name='order_line']/tree[1]/field[@name='component_ids']" position="after">
                <field name="tariff"/>
            </xpath>
        </field> 
    </record>
</odoo>