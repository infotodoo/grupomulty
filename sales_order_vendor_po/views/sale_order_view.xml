<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_inherit_product_vendor_po" model="ir.ui.view">
        <field name="name">sale.order.inherit.product.vendor.po</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='order_line']//tree//field[@name='product_uom_qty']" position="before">
                <field name="vendor_active"/>
                <field name="custom_vendor_id" domain="[('supplier_rank', '>', 0)]" attrs="{'required': [('vendor_active', '=', True)], 'readonly': [('vendor_active', '!=', True)]}"/>
                <field name="custom_vendor_ids" widget="many2many_tags" invisible='1'/>
                <field name="component_ids" widget="many2many_tags"/>
            </xpath>

            <xpath expr="//field[@name='order_line']//form//field[@name='route_id']" position="before">
                <field name="purchase_id"/>
            </xpath>

            <xpath expr="//field[@name='partner_id']" position="before">
                <field name="sale_description"/>
            </xpath>

            <xpath expr="//form[1]/sheet[1]/notebook[1]/page[@name='order_lines']/field[@name='order_line']/tree[1]/field[@name='price_unit']" position="after">
                <field name="real_purchase_price" attrs="{'required': [('vendor_active', '=', True)], 'readonly': [('vendor_active', '!=', True)]}"/>
            </xpath>

        </field>
    </record>

    <record id="inherit_sale_view_order_tree" model="ir.ui.view">
        <field name="name">inherit.sale.order.tree</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">

             <xpath expr="//field[@name='partner_id']" position="before">
                <field name="sale_description"/>
            </xpath>

        </field>
    </record>

</odoo>
