<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="purchase_order_form" model="ir.ui.view">
        <field name="name">inherit.purchase.order</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='incoterm_id']" position="after">
                <field name="observation_ref_intro"/>
            </xpath>
            <xpath expr="//page/field/tree/field[@name='name']" position="after">
                <field name="num_part" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>